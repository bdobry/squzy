<Alloy>
	<Window id="loginWin" class="landing">
		<ScrollView>
			<View>
				<View id="heroImg">				
					<ImageView class="logo" image="img/logo.png" />
				</View>
				<View id="logins">
					<View layout="vertical" class="insideLogins">
						<!-- <Label id="usHint">username</Label> -->
						<TextField id="username"></TextField>
						<!-- <Label id="passHint">password</Label> -->
						<TextField id="password"></TextField>
						<Button id="Btn_login" onClick="goActivity">Login</Button>
						<Button id="Btn_login" onClick="goActivity">Sign Up</Button>
						<Button id="noAccount" onClick="goActivity">...or proceed without an account</Button>
					</View>
				</View>	
			</View>
		</ScrollView>
	</Window>
</Alloy>

